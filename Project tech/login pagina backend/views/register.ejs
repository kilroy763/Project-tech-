

<link rel="stylesheet" href="/styles.css" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Oswald&display=swap" rel="stylesheet">

    <div>

      <form action="/users/register" method="POST">
        <h1 >Registreren</h1>
        <% include ./partials/messages %>
        <div class="deel1">
        <div >
          <label for="name">Naam</label>
          <input
            type="name"
            id="name"
            name="name"
           
            placeholder="Naam"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>

        <div>
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
          
            placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>

        <div>
          <label for="password">Wachtwoord</label>
          <input
            type="password"
            id="password"
            name="password"

            placeholder="Wachtwoord"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>

        <div >
          <label for="password2">Herhaal Wachtwoord</label>
          <input
            type="password"
            id="password"
            name="password2"

            placeholder="Herhaal Wachtwoord"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>

        <div>
          <label for="age">Leeftijd</label>
          <input type="number" id="age" name="age" min="18" max="99" placeholder="18">
        </div>
      </div>

      <div class="deel2"> 
        <div>
          <label for="img">Profielfoto</label>
          <input type="file" id="img" name="img" accept="image/*">
        </div>

        <div class="gndr1">
          <label for="gndru">Ik ben een</label> <br>
          <label for="">Man</label>
          <input type="radio" id="gndr1" name="gndru" value="man" required>
          <label for="">Vrouw</label>
          <input type="radio" id="gndr1" name="gndru" value="vrouw">
          <label for="">Anders</label>
          <input type="radio" id="gndr1" name="gndru" value="anders">
        </div>
          <br>
        <div class="gndr2">
          <label for="gndrs">Ik Zoek een</label><br>
          <label for="">Man</label>
          <input type="radio" id="gndr2" name="gndrs" value="man" required>
          <label for="">Vrouw</label>
          <input type="radio" id="gndr2" name="gndrs" value="vrouw">
          <label for="">Anders</label>
          <input type="radio" id="gndr2" name="gndrs" value="anders">
        </div>
          <br>
        <div>
          <label for="dscrpt">Omschrijving van jezelf</label>
          <textarea id="dscrpt" name="dscrpt" rows="7" cols="45"></textarea>
        </div>
      </div>


         <button type="submit" class="submit">Registeren</button>
   <a href="/users/login">Klik hier als je al een account hebt</a>
      </form>


    </div>

